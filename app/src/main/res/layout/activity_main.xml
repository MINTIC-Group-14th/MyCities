<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/mc_image"
            android:layout_width="391dp"
            android:layout_height="218dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/soacha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/mc_desc"
            android:layout_width="391dp"
            android:layout_height="160dp"
            android:layout_marginTop="28dp"
            android:justificationMode="inter_word"
            android:text="@string/tx_desc"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mc_image" />

        <TextView
            android:id="@+id/mc_temp"
            android:layout_width="391dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:text="@string/tx_temp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mc_desc" />

        <TextView
            android:id="@+id/mc_place"
            android:layout_width="391dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="@string/tx_place"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mc_temp" />
        <TextView
            android:id="@+id/mc_places"
            android:layout_width="391dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="@string/sites"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mc_place" />

        <TextView
            android:id="@+id/mc_place1"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="@string/site1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mc_places" />

        <TextView
            android:id="@+id/mc_place2"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="@string/site2"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.756"
            app:layout_constraintStart_toEndOf="@+id/mc_place1"
            app:layout_constraintTop_toBottomOf="@+id/mc_places" />

        <TextView
            android:id="@+id/mc_place3"
            android:layout_width="391dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="@string/site3"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mc_place1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>